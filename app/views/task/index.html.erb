<ul>
  <% @tasks.each do |task| %>
    <li><%=link_to task.title, task_path(task)%></li>
    <li><%= task.completed? ? "Completada" : "Pendiente" %></li>
    <%= link_to 'Delete', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
  <li><%=link_to "Agregar tarea nueva", ('new')%></li>
</ul>
